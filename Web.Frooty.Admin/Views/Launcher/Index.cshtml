@{
    ViewBag.Title = "Launcher Banners";
}

<div class="row">
    <div class="col-lg-12">
        <h1>Launcher Banners <small></small></h1>
        <ol class="breadcrumb">
            <li class="active"><i class="fa fa-certificate"></i> Launcher Banners</li>
        </ol>
    </div>
</div><!-- /.row -->
<div class="row">
    <div class="col-md-12 border-bottom">
        <form id="AddBannder" action="@Url.Action("CadastraBanner", "Launcher")" method="post">
             @{Html.RenderPartial("Error");}
            <div class="row form-group">
                <div class="col-sm-12">
                    <h2 class="green CENTER">Add New Banner</h2>
                </div>
                <div class="col-sm-2">
                    <label for="title">Title</label>
                    <input type="text" id="title" class="form-control" placeholder="..." />
                          </div>
                <div class="col-sm-4">
                    <label for="url">Link of image*</label>
                    <input type="text" id="url" class="form-control" placeholder="http://" />
                   
                </div> 
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="">Image</label>
                        <div id="imageUpload"></div>
                        <div id="load"></div>
                        <div id="teste"><input id="imagepost" name="imagepost" type="file" multiple="true" data-preview-file-type="any"  /></div>
                    </div>
                </div>
                <div class="col-lg-2">
                        <label class="">&nbsp;</label>
                        <input type="button" id="btnPost" value="Add Banner" class="form-control btn btn-success" />
                </div>
            </div>
        </form>
    </div>
    <hr />
</div>
<div class="row">
            <div class="col-lg-12">
                <div class="col-sm-12">
                    <h2 class="green CENTER">Overview</h2>
                </div>
            <div class="panel panel-success">
              <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-list"></i> Banners </h3>
              </div>
              <div class="panel-body">
                <div class="table-responsive">
                  <table id="posts" class="table table-striped table-bordered">
                    <thead>
                      <tr>
                        <th>ID #</th>
                        <th>Title</th>
                        <th>Link of image</th>
                        <th>Date</th>
                        <th></th>
                      </tr>
                    </thead>
                    <tbody>
                     
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>

@section Scripts{
<script src="~/Scripts/Launcher/Launcher.js"></script>
}