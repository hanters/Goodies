@{
    ViewBag.Title = "Overview";
}

<div class="row">
    <div class="col-lg-12">
        <h1>Products</h1>
        <ol class="breadcrumb">
            <li class="active"><i class="fa fa-star"></i> Shipping</li>
            
        </ol>
    </div>
</div><!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-purple">
            <div class="panel-heading">
                <h2 class="panel-title"><i class="fa fa-list"></i> Shipping  <a data-toggle="modal" class="btn btn-warning pull-right" href="javascript:void(0)"> <i class="fa fa-plus-circle"></i> Add New Shipping</a> <div class="clearfix"></div></h2>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table id="posts" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Bronze price</th>
                                <th>Silver Price</th>
                                <th>Gold Price</th>
                                <th>Shipping</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade custommodal EventsModal" tabindex="-1" role="dialog" aria-labelledby="EventsModal" data-backdrop="static" data-keyboard="false" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="closeModal();"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h2 class="modal-title">Shipping</h2>
            </div>
            <div class="modal-body">
                <form  onsubmit="return false;">
                    @{Html.RenderPartial("Error");}

                    <div class="row">
                        <div class="col-xs-12 col-sm-6 form-group">
                            <label for="name">Group Name</label>
                            <input id="ds_group" name="ds_group" type="text" class="form-control" maxlength="50" />
                        </div>
                        <div class="col-xs-12 col-sm-6 form-group">
                            <label for="flavour">Shipping</label>
                            <select id="fl_shipping" class="form-control">
                                <option value="Y">YES</option>
                                <option value="N">NO</option>
                            </select>
                        </div>
                        <div class="col-xs-12 col-sm-6 form-group">
                            <label for="weight">Price</label>
                            <input id="price" name="price" type="text" class="form-control"   />
                        </div>
                        <div class="col-xs-12 col-sm-6 form-group">
                            <label for="price">Bronze Price</label>
                            <input id="bronze_price" name="bronze_price" type="text" class="form-control" />
                        </div>
                        <div class="col-xs-12 col-sm-6 form-group">
                            <label for="status">Silver Price</label>
                            <input type="text" id="silver_price" name="silver_price" class="form-control"/>
                        </div>
                        <div class="col-xs-12 col-sm-6 form-group">
                            <label class="">Gold Price</label>
                            <input id="gold_price" name="gold_price" type="text" class="form-control" />
                        </div>
                    </div>
                   
                    <div class="row">
                        <div class="col-xs-12 col-sm-4 form-group">
                            <label for="price">States</label>
                            <select multiple size="10" name="FromLB" class="form-control" id="id_state"></select>
                        </div>
                        <div class="col-xs-12 col-sm-4 form-group">
                            <label> &nbsp;</label>
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 form-group">
                                    <label class="">&nbsp;</label>
                                </div>
                                <div class="col-xs-12 col-sm-12 form-group" style="margin-left: 153px;">
                                    <label class="">&nbsp;</label>
                                    <a class="btn btn-default" href="javascript:void(0)" onclick="move(document.forms[0].FromLB, document.forms[0].ToLB)"> <i class="glyphicon glyphicon-arrow-right"></i></a>
                                </div>
                                <div class="col-xs-12 col-sm-6 form-group" style="margin-left: 153px;">
                                    <label class="">&nbsp;</label>
                                    <a class="btn btn-default" href="javascript:void(0)" onclick="move(document.forms[0].ToLB, document.forms[0].FromLB)"> <i class=" glyphicon glyphicon-arrow-left"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-4 form-group">
                            <label for="price">Bronze Price</label>
                            <select multiple size="10" name="ToLB" class="form-control" id="id_state_"></select>
                        </div>

                    </div>
                    <div class="row">

                        <div class="col-lg-2 pull-right">
                            <button type="button" class="btn btn-success form-control" id="Draft"><i class="fa fa-star"></i> SAVE</button>
                        </div>
                        <div class="col-lg-2 pull-right">
                            <button type="button" class="btn btn-danger form-control" id="Inactive"><i class="fa fa-user"></i> DISCARD</button>
                        </div>
                        <input type="hidden" id="id_shipping" />
                        <input type="hidden" id="hdn_price" />
                        <input type="hidden" id="hdn_bronze_price" />
                        <input type="hidden" id="hdn_silver_price" />
                        <input type="hidden" id="hdn_gold_price" />
                    </div><!-- /.row -->
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<script src="~/Scripts/Shipping/shipping.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#menu-dashboard").removeClass("active");
            $("#menu-shipping").addClass("open");

        });
    </script>
}