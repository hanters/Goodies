@{
    ViewBag.Title = "EventsModal";
}

<div class="modal fade custommodal EventsModal" tabindex="-1" role="dialog" aria-labelledby="EventsModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">News Post</h4>
        </div>
        <div class="modal-body">
            <form id="AddPost" action="@Url.Action("NewPost", "News")" method="post" onsubmit="return false;">
<div class="row">
    <div class="col-lg-8">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-12">
                            <label>Title</label>
                            <input id="title" name="title"  type="text" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- /.row -->

        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-12">
                            <label class="">Introduction</label>
                            <textarea class="form-control" id="introduction" name="introduction"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="">Image</label>
                                <input id="imagepost" name="imagepost" type="file" multiple="true" data-preview-file-type="any" required />
                            </div>
                        </div>
                    </div>
                
            </div>
        </div><!-- /.row -->
    </div>
     
    @*</div>*@

    <div class="col-lg-4">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-9 col-xs-9">
                        <div class="form-group">
                            <label><strong> <i class='glyphicon glyphicon-tags small'></i> Tag's</strong></label>
                            <div class="input-group">
                                <div class="input-group-addon">#</div>
                                <input class="form-control" placeholder="Enter tag" id="tagname" type="text">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-xs-3">
                        <label>&nbsp;</label>
                        <a href="#" id="addtag" class="btn btn-primary"><i class="fa fa-plus"></i></a>
                    </div>
                </div><!-- /.row -->
                <div class="row">
                    <div class="col-lg-12" id="tags">
                        <input id="taglist" type="hidden" />
                    </div>
                </div><!-- /.row -->
            </div><!-- /.row -->
        </div><!-- /.row -->
    </div>
</div>
<div class="row">
    <div  class="col-lg-12">
        <div id="summernote">Hello Summernote</div>
    </div>
</div><!-- /.row -->
<div class="clear"><br /></div>
<div class="row">
    <div class="col-lg-2 pull-right">
        <button class="btn btn-primary form-control"><i class="fa fa-user"></i> PUBLISH</button>
    </div>
    <div class="col-lg-2 pull-right">
        <button class="btn btn-success form-control"><i class="fa fa-user"></i> SAVE A DRAFT</button>
    </div>
    <div class="col-lg-2 pull-right">
        <button class="btn btn-danger form-control"><i class="fa fa-user"></i> DISCARD</button>
    </div>
</div><!-- /.row -->
</form>
        </div>
    </div>
  </div>
</div>
