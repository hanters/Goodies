@{
    ViewBag.Title = "Overview";
}

<div class="row">
    <div class="col-lg-12">
        <h1>Products</h1>
        <ol class="breadcrumb">
            <li class="active"><i class="fa fa-star"></i> Products</li>
            <li class="active">Overview</li>
        </ol>
    </div>
</div><!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-purple">
            <div class="panel-heading">
                <h2 class="panel-title"><i class="fa fa-list"></i> Products  <a data-toggle="modal" class="btn btn-warning pull-right" href="javascript:void(0)"> <i class="fa fa-plus-circle"></i> Add New Product</a> <div class="clearfix"></div></h2>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table id="posts" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>ID #</th>
                                <th>Name</th>
                                <th>Brands</th>
                                <th>Weight</th>
                                <th align="center">Price</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
    
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div  class="modal fade custommodal EventsModal" tabindex="-1" role="dialog" aria-labelledby="EventsModal" data-backdrop="static" data-keyboard="false" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="closeModal();"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h2 class="modal-title">Products</h2>
            </div>
            <div class="modal-body">
                <form id="AddPost" action="@Url.Action("AddEdit", "Products")" method="post" onsubmit="return false;">
                    @{Html.RenderPartial("Error");}

                    <div class="row">
                        <div class="col-xs-12 col-sm-6 form-group">
                            <label for="name">Brands</label>
                            @Html.DropDownList("id_brands", new SelectList(Model, "id_brands", "name"), "Select", new { @class = "form-control" })
                        </div>
                        <div class="col-xs-12 col-sm-12 form-group">
                            <label for="name">Name</label>
                            <input id="name" name="name" type="text" class="form-control" maxlength="50" />
                        </div>
                        <div class="col-xs-12 col-sm-6 form-group">
                            <label for="flavour">Flavour</label>
                            <input id="flavour" name="flavour" type="text" class="form-control" maxlength="50" />
                        </div>
                        <div class="col-xs-12 col-sm-6 form-group">
                            <label for="weight">Weight</label>
                            <input id="weight" name="weight" type="text" class="form-control" maxlength="5" />
                        </div>
                        <div class="col-xs-12 col-sm-6 form-group">
                            <label for="price">Price</label>
                            <input id="price" name="price" type="text" class="form-control" />
                        </div>
                        <div class="col-xs-12 col-sm-6 form-group">
                            <label for="status">Status</label>
                            <select id="status" name="status" class="form-control">
                            </select>
                        </div>
                        <div class="col-xs-12 col-sm-6 form-group">
                            <label class="">Picture</label>
                            <div id="teste"><input id="imageproduct" name="imageproduct" type="file" multiple="true" data-preview-file-type="any" /></div>
                           
                            <div id="load"></div>
                        </div>
                        <div class="col-xs-12">
                            <div id="imageUpload"></div>
                        </div>
                        <div class="col-xs-12 col-sm-12 form-group">
                            <label for="description">Description</label>
                            <textarea id="description" name="description" type="text" rows="6" maxlength="100" class="form-control"></textarea>
                        </div>

                    </div>
                    <div class="row">
                        
                        <div class="col-lg-2 pull-right">
                            <button type="button"  class="btn btn-success form-control" id="Draft"><i class="fa fa-star"></i> SAVE</button>
                        </div>
                        <div class="col-lg-2 pull-right">
                            <button type="button" class="btn btn-danger form-control" id="Inactive"><i class="fa fa-user"></i> DISCARD</button>
                        </div>
                        <input type="hidden" id="id_products" />
                    </div><!-- /.row -->
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/Products/index.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#menu-dashboard").removeClass("active");
            $("#menu-products").addClass("open");

        });
    </script>
}