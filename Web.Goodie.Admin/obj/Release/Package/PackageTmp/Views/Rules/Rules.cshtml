@{
    ViewBag.Title = "Overview";
}

<div class="row">
    <div class="col-lg-12">
        <h1>Rules</h1>
        <ol class="breadcrumb">
            <li class="active"><i class="fa fa-info"></i> Rules</li>
            <li class="active">Overview</li>
        </ol>
    </div>
</div><!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-purple">
            <div class="panel-heading">
                <h2 class="panel-title"><i class="fa fa-list"></i> Rules  <div class="clearfix"></div></h2>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table id="posts" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Bronze</th>
                                <th>Silver</th>
                                <th>Gold</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade custommodal" id="rules-Modal" tabindex="-1" role="dialog" aria-labelledby="rulesModal" data-backdrop="static" data-keyboard="false" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" data-target="#rulesModal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h2 class="modal-title">Rules</h2>
            </div>
            <div class="modal-body">
                <form id="AddPost"  method="post" onsubmit="return false;">
                    @{Html.RenderPartial("Error");}

                    <div class="row">

                        <div class="col-xs-12 col-sm-6 form-group">
                            <label for="typepartner">Products</label>
                            <select class="form-control" id="fl_active">
                                <option value="S">Active</option>
                                <option value="N">Disabled</option>
                            </select>
                        </div>
                        
                        <div class="col-xs-12 col-sm-6 form-group">
                                <label for="discount">Weight Bonze</label>
                                <input id="weight_bronze" type="text" class="form-control" />
                            </div>
                        
                        <div class="col-xs-12 col-sm-6 form-group">
                                <label for="status">Weight Silver</label>
                                <input id="weight_silver" type="text" class="form-control" />
                        </div>
                        
                        <div class="col-xs-12 col-sm-6 form-group">
                                <label for="status">Weight Gold</label>
                                <input id="weigth_gold" type="text" class="form-control" />
                         </div>
             
                    </div>
                    <div class="row">

                        <div class="col-lg-2 pull-right">
                            <button class="btn btn-success form-control" id="Draft"><i class="fa fa-star"></i> SAVE</button>
                        </div>
                        
                        <input type="hidden" id="id_role" />
                        <input type="hidden" id="hdn_bronze" />
                        <input type="hidden" id="hdn_silver" />
                        <input type="hidden" id="hdn_gold" />

                    </div><!-- /.row -->
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/Rules/rules.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#menu-dashboard").removeClass("active");
            $("#menu-rules").addClass("open");

        });
    </script>
}