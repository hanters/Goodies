@{
    ViewBag.Title = "Overview";
}

<div class="row">
    <div class="col-lg-12">
        <h1>Rules</h1>
        <ol class="breadcrumb">
            <li class="active"><i class="fa fa-info"></i> Rules</li>
            <li class="active">Overview</li>
        </ol>
    </div>
</div><!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-purple">
            <div class="panel-heading">
                <h2 class="panel-title"><i class="fa fa-list"></i> Rules - Products <a data-toggle="modal"  class="btn btn-warning pull-right" href="javascript:void(0)"> <i class="fa fa-plus-circle"></i> Add New Rule</a> <div class="clearfix"></div></h2>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table id="posts" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>ID #</th>
                                <th>Products</th>
                                <th>Bronze</th>
                                <th>Silver</th>
                                <th>Gold</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade custommodal" id="rulesModal" tabindex="-1" role="dialog" aria-labelledby="rulesModal" data-backdrop="static" data-keyboard="false" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" data-target="#rulesModal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h2 class="modal-title">Rules</h2>
            </div>
            <div class="modal-body">
                <form id="AddPost" action="@Url.Action("AddEdit", "Products")" method="post" onsubmit="return false;">
                    @{Html.RenderPartial("Error");}

                    <div class="row">
                        <div class="col-xs-12 col-sm-6 form-group">
                            <label for="typepartner">Products</label>
                            <select class="form-control" id="id_products">                              
                            </select>
                        </div>
                        <div class="col-xs-12 col-sm-6 form-group">
                            <label for="Keyword">Status</label>
                            <select class="form-control" id="id_status"></select>
                        </div>
                        @*<div class="col-xs-12 col-sm-6 form-group">
                            <label for="discount">Weight Bonze</label>
                            <input id="weight_bronze" type="text" class="form-control" />
                        </div>*@
                        <div class="col-xs-12 col-sm-6 form-group">
                            <label for="minamount">Price Bonze</label>
                            <input id="price_bronze" name="discount" type="text" class="form-control" />
                        </div>
                        @*<div class="col-xs-12 col-sm-6 form-group">
                            <label for="status">Weight Silver</label>
                            <input id="weight_silver" type="text" class="form-control" />
                        </div>*@
                        <div class="col-xs-12 col-sm-6 form-group">
                            <label for="status">Price Silver</label>
                            <input id="price_silver" type="text" class="form-control" />
                        </div>
                        @*<div class="col-xs-12 col-sm-6 form-group">
                            <label for="status">Weight Gold</label>
                            <input id="weigth_gold" type="text" class="form-control" />
                        </div>*@
                        <div class="col-xs-12 col-sm-6 form-group">
                            <label for="status">Price Gold</label>
                            <input id="price_gold" type="text" class="form-control" />
                        </div>

                    </div>
                    <div class="row">

                        <div class="col-lg-2 pull-right">
                            <button class="btn btn-success form-control" id="Draft"><i class="fa fa-star"></i> SAVE</button>
                        </div>
                        <div class="col-lg-2 pull-right">
                            <button class="btn btn-danger form-control" id="Inactive" onclick="dialogconfirmation('Do you want to delete this rule', Discard, $('#id_role').val())"><i class="fa fa-user"></i> DISCARD</button>
                        </div>
                        <input type="hidden" id="id_role" />
                        <input type="hidden" id="hdn_price_bronze" />
                        <input type="hidden" id="hdn_price_silver" />
                        <input type="hidden" id="hdn_price_gold" />

                    </div><!-- /.row -->
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/Rules/index.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#menu-dashboard").removeClass("active");
            $("#menu-rules-products").addClass("open");

        });
    </script>
}