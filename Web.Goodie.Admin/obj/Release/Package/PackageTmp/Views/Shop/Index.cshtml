@{
    ViewBag.Title = "Overview";
}
@using Web.Frooty.Admin.Models

<style type="text/css">

    .traco {
        text-decoration: line-through;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <h1>Shop</h1>
        <ol class="breadcrumb">
            <li class="active"><i class="fa fa-shopping-cart"></i> Shop</li>
            <li class="active">Requests</li>

        </ol>
    </div>
</div><!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-purple">
            <div class="panel-heading">
                <h2 class="panel-title"><i class="fa fa-list"></i> Requests  </h2>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table id="requests" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>ID #</th>
                                <th>Partner Login</th>
                                <th>Data</th>
                                <th>Status</th>
                                <td>Total Value</td>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade custommodal" tabindex="-1" role="dialog" id="ModalRequest" aria-labelledby="ModalRequest" data-backdrop="static" data-keyboard="false" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h2 class="modal-title">Request</h2>
            </div>
            <form id="AddPost" action="@Url.Action("AddEdit", "Products")" method="post" onsubmit="return false;">
                @{Html.RenderPartial("Error");}

                <div class="modal-body">
                    <div class="row">
                        <div class="col-xs-12 col-sm-2">
                            <h3 class="no-margin "><small>#ID</small><br /><span id="lbl-id-shop"></span></h3>
                        </div>
                        <div class="col-xs-12 col-sm-3">
                            <h3 class="no-margin"><small>Data</small><br /><span id="lbl-date"></span></h3>
                        </div>

                        <div class="col-xs-12 col-sm-3">

                            <h3 class="no-margin">
                                <small>Status</small><br />
                                @Html.DropDownList("id_status", new SelectList(Model, "id_status", "description"), "Select", new { @class = "form-control" })

                            </h3>
                        </div>
                        
                        <div class="col-xs-12 col-sm-2">
                            <small>&nbsp;</small><br />
                            <h3 class="no-margin"><button class="btn btn-success btn-block" id="btn-salvar">SAVE STATUS</button></h3>
                        </div>

                        <div class="col-xs-12 col-sm-2">
                            <small>&nbsp;</small><br />
                            <button class="btn btn-default" id="btn-refresh"><i class="glyphicon glyphicon-refresh"></i></button>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <hr />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-4">

                            <h3 class="no-margin">Details<br /><br class="clearfix" /></h3>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table id="cart" class="table responsive dt-responsive table-striped" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Amount</th>
                                    <th>Price</th>
                                    <th>Rule Name</th>
                                    <th>Rule %</th>
                                    <th>Total Weight</th>
                                    <th>Total</th>
                                </tr>
                            </thead>

                            <tbody>

                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 text-right">
                            <strong>Total items</strong><br /><strong><span id="lbl-total-rules"></span></strong>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <hr />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <div class="row">
                                <div class="col-xs-9 col-sm-9">
                                    <div class="form-group cs-hidden">
                                        <h3>
                                            <small>+ Shipping</small><br />
                                            <strong id="lbl-shipping"></strong>
                                        </h3>
                                    </div>
                                </div>
                                <div class="col-xs-3 col-sm-3">
                                    <div class="form-group">
                                        <label>&nbsp;</label><br />
                                        @*<a href="#" class="btn btn-success">OK</a>*@
                                    </div>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" id="hdn-weight_total" />
                        <div class="col-xs-12 col-sm-6">
                            <div class="text-right total">
                                <h3><small>TOTAL<br /></small>
                                <strong id="lbl-total-rules-shipping"></strong></h3>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<input type="hidden" id="id_shop" />
<input type="hidden" id="hdn-total" />
<input type="hidden" id="hdn-price" />
<input type="hidden" id="hdn-total-rules" />
<input type="hidden" id="hdn-price-rules" />
<input type="hidden" id="hdn-date" />
<input type="hidden" id="id_partnes" />
    @section Scripts{>
           <script src="~/Scripts/shop/index.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#menu-dashboard").removeClass("active");
            $("#menu-shop").addClass("open");

        });
    </script>
}