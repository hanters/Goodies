@model IEnumerable<Web.Frooty.Admin.Models.tb_business>
@{
    ViewBag.Title = "Index";
}
<style type="text/css">

    .traco {
        text-decoration: line-through;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <h1>Partners <small> Overview</small></h1>
        <ol class="breadcrumb">
            <li class="active"><i class="fa fa-group"></i> Partners</li>
        </ol>
        @*<div class="alert alert-success alert-dismissable">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              Welcome to SB Admin by <a class="alert-link" href="http://startbootstrap.com">Start Bootstrap</a>! Feel free to use this template for your admin needs! We are using a few different plugins to handle the dynamic tables and charts, so make sure you check out the necessary documentation links provided.
            </div>*@
    </div>
</div><!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-list"></i> Partners  <a id="btnCad" data-toggle="modal" class="btn btn-warning pull-right" href="javascript:void(0)"> <i class="fa fa-calendar"></i> Add New Event</a> <div class="clearfix"></div></h3>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table id="posts" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>ID # <i class="fa fa-sort"></i></th>
                                <th>Company <i class="fa fa-sort"></i></th>
                                <th>Name <i class="fa fa-sort"></i></th>
                                <th>Phone</th>
                                <th>status</th>
                                <th>Type</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade custommodal EventsModal" tabindex="-1" role="dialog" aria-labelledby="EventsModal" data-backdrop="static" data-keyboard="false" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Partners</h4>
            </div>
            <div class="modal-body">
                <div>

                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Profile</a></li>
                        <li role="presentation"><a href="#historyshop" aria-controls="historyshop" role="tab" data-toggle="tab">History Shop</a></li>

                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active padding-top" id="profile">
                            <form onsubmit="return false;">
                                @{Html.RenderPartial("Error");}
                                <div class="row">
                                    <div class="col-sm-12">
                                        <h3 class="no-margin padding-bottom padding-top">Personal Information</h3>
                                    </div>
                                    <div class="col-sm-3 form-group">
                                        <label for="name">Name*</label>
                                        @Html.TextBox("name", "", null, new { @class = "form-control", placeholder = "Put your name..." })
                                    </div>
                                    <div class="col-sm-3 form-group">
                                        <label for="lastname">Lastname*</label>
                                        @Html.TextBox("lastname", "", null, new { @class = "form-control", placeholder = "Put your last name..." })
                                    </div>
                                    <div class="col-sm-1 form-group">
                                        <label for="dob">Birthday</label>
                                        @Html.TextBox("month", "", null, new { @class = "form-control number", placeholder = "MM", maxlength = "2" })
                                    </div>
                                    <div class="col-sm-1 form-group">
                                        <label for="name">&nbsp;</label>
                                        @Html.TextBox("day", "", null, new { @class = "form-control number", placeholder = "DD", maxlength = "2" })
                                    </div>
                                    <div class="col-sm-1 form-group">
                                        <label>&nbsp;</label>
                                        @Html.TextBox("year", "", null, new { @class = "form-control number", placeholder = "YYYY", maxlength = "4" })
                                    </div>
                                    @*<div class="col-sm-3">
                                            <label for="name">Name</label>
                                            @Html.TextBox("name", "", null, new { @class="form-control", placeholder="Put your name..." })
                                        </div>       *@
                                    <div class="col-sm-6 form-group">
                                        <label for="email">E-mail*</label>
                                        @Html.TextBox("email", "", null, new { @class = "form-control", placeholder = "name@domain.com" })
                                    </div>
                                    <div class="col-sm-3 form-group">
                                        <label for="pass1">Passoword*</label>
                                        <input type="password" id="password" name="password" password" class="form-control" placeholder="Put your password..." />
                                         @*@Html.Text("password", "", null, new { @class = "form-control", placeholder = "Put your name..." })>*@
                                    </div>
                                    <div class="col-sm-3 form-group">
                                        <label for="pass2">Confirm Passoword*</label>
                                        <input type="password" id="passwordConfirn" name="passwordConfirn" password" class="form-control" placeholder="Put your password..." />
                                        @*@Html.TextBox("passwordConfirn", "", null, new { @class = "form-control", placeholder = "Confirm your Passoword..." })*@
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col-sm-12">
                                        <h3 class="no-margin padding-bottom">Company information</h3>
                                    </div>
                                    <div class="col-sm-3 form-group">
                                        <label for="businessmode">Business</label>
                                        @Html.DropDownList("id_business", new SelectList(Model, "id_business", "business"), "Selecione", new { @class = "form-control" })
                                    </div>
                                    <div class="col-sm-6 form-group">
                                        <label for="companyname">Company Name</label>
                                        @Html.TextBox("company", "", null, new { @class = "form-control", placeholder = "YOUR COMPANY" })
                                    </div>
                                    <div class="col-sm-3 form-group">
                                        <label for="texid">Tax ID</label>
                                        @Html.TextBox("taxID", "", null, new { @class = "form-control", placeholder = "" })
                                    </div>
                                    <div class="col-sm-3 form-group">
                                        <label for="name">Phone*</label>
                                        @Html.TextBox("phone", "", null, new { @class = "form-control" })
                                    </div>
                                    <div class="col-sm-6 form-group">
                                        <label for="address">Address</label>
                                        @Html.TextBox("address", "", null, new { @class = "form-control" })
                                    </div>
                                    <div class="col-sm-3 form-group">
                                        <label for="zipcode">Zip Code</label>
                                        @Html.TextBox("zipCode", "", null, new { @class = "form-control" })
                                    </div>
                                    <div class="col-sm-6 form-group">
                                        <label for="city">City</label>
                                        @Html.TextBox("city", "", null, new { @class = "form-control" })
                                    </div>
                                    <div class="col-sm-6 form-group">
                                        <label>Country</label>
                                        @Html.DropDownList("id_country", null, "Select Country", new { @class = "form-control", onchange = "ListCountry(this.value,true)" })
                                    </div>
                                    <div class="col-sm-3  form-group">
                                        <label for="state">State Province*</label>
                                        <select name="state" id="state" class="form-control">
                                            <option value="" selected="selected">Select a State</option>
                                           
                                        </select>
                                    </div>
                                    <div class="col-sm-3 form-group">
                                        <label for="pass2">Status</label>
                                        @Html.DropDownList("id_statusPartners", null, "Selecione", new { @class = "form-control" })

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3 form-group pull-right">
                                        <label for="pass2">&nbsp;</label>
                                        @Html.TextBox("save", "SAVE", null, new { @class = "form-control btn btn-warning", type = "button" })
                                    </div>
                                </div>
                                <input type="hidden" id="id_partners" />
                            </form>

                        </div>
                        <div role="tabpanel" class="tab-pane padding-top" id="historyshop">
                            <div class="row">
                                <div class="col-xs-12 col-sm-2">
                                    <h3 class="no-margin padding-bottom padding-top">History Requests</h3>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="floatrequest collapse">
                                        <div class="modal-body">                                           
                                           <div class="row">
                                                <div class="col-xs-12 col-sm-2">
                                                    <small>&nbsp;</small><br />
                                                    <h3 class="no-margin"><button class="btn btn-warning btn-block btnvoltarhistory">VOLTAR</button></h3>
                                                </div>
                                                <div class="col-xs-12 col-sm-2">
                                                    <h3 class="no-margin "><small>#ID</small><br /><span id="lbl-id-shop"></span></h3>
                                                </div>
                                                <div class="col-xs-12 col-sm-3">
                                                    <h3 class="no-margin"><small>Data</small><br /><span id="lbl-date"></span></h3>
                                                </div>

                                                <div class="col-xs-12 col-sm-3">

                                                    <h3 class="no-margin">
                                                        <small>Status</small><br />
                                                        @Html.DropDownList("id_status", null, "Selecione", new { @class = "form-control" })
                                                    </h3>
                                                </div>
                                                <div class="col-xs-12 col-sm-2">
                                                    <small>&nbsp;</small><br />
                                                    <h3 class="no-margin"><button class="btn btn-success btn-block" id="btn-salvar">SAVE STATUS</button></h3>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-xs-12">
                                                    <hr />
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-xs-12 col-sm-4">

                                                    <h3 class="no-margin">Details<br /><br class="clearfix" /></h3>
                                                </div>
                                            </div>
                                            <div class="table-responsive">
                                                <table id="cart" class="table responsive dt-responsive table-striped" cellspacing="0" width="100%">
                                                    <thead>
                                                        <tr>
                                                            <th>Product</th>
                                                            <th>Amount</th>
                                                            <th>Price</th>
                                                            <th>Rule Name</th>
                                                            <th>Rule %</th>
                                                            <th>Total</th>
                                                        </tr>
                                                    </thead>

                                                    <tbody></tbody>
                                                </table>
                                            </div>
                                            <div class="row">
                                                <div class="col-xs-12 text-right">
                                                    <h3><small>Total items</small><br /><span id="lbl-total-rules"></span></h3>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-xs-12 col-sm-6">
                                                    <div class="row">
                                                        <div class="col-xs-9 col-sm-9">
                                                            <div class="form-group cs-hidden">
                                                                <h3>
                                                                    <small>+ Shipping</small><br />
                                                                    <strong id="lbl-shipping"></strong>
                                                                </h3>
                                                            </div>
                                                        </div>
                                                        <div class="col-xs-3 col-sm-3">
                                                            <div class="form-group">
                                                                <label>&nbsp;</label><br />
                                                                @*<a href="#" class="btn btn-success">OK</a>*@
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <input type="hidden" id="hdn-weight_total" />
                                                <div class="col-xs-12 col-sm-6">
                                                    <div class="text-right total">
                                                        <h3>
                                                            <small>TOTAL<br /></small>
                                                            <strong id="lbl-total-rules-shipping"></strong>
                                                        </h3>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="table-responsive historydetail collapse in">
                                        <table id="requests" class="table table-striped table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>ID #</th>
                                                    <th>Partner Login</th>
                                                    <th>Data</th>
                                                    <th>Status</th>
                                                    <td>Total Value</td>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="clearfix padding-bottom"><hr /></div>
                <input type="hidden" id="id_shop" />
                <input type="hidden" id="hdn-total" />
                <input type="hidden" id="hdn-price" />
                <input type="hidden" id="hdn-total-rules" />
                <input type="hidden" id="hdn-price-rules" />

            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/Scripts/Partners/Partners.js"></script>
}