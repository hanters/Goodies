@{
    ViewBag.Title = "Edit";
}

<div class="row">
          <div class="col-lg-12">
            <h1>Edit Post <small></small></h1>
            <ol class="breadcrumb">
              <li class="active"><i class="fa fa-list"></i> News</li>
                <li class="active">Edit</li>
            </ol>
