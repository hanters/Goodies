@{
    ViewBag.Title = "Overview";
}
<div class="row">
    <div class="col-lg-12">
        <h1>About</h1>
        <ol class="breadcrumb">
            <li class="active"><i class="fa fa-star"></i> About</li>
            <li class="active">Overview</li>
        </ol>
    </div>
</div><!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-purple">
            <div class="panel-heading">
                <h2 class="panel-title"><i class="fa fa-list"></i> About  <a data-toggle="modal" class="btn btn-warning pull-right" href="javascript:void(0)"> <i class="fa fa-plus-circle"></i> Add New About</a> <div class="clearfix"></div></h2>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table id="posts" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>ID #</th>
                                <th>Aba</th>
                                <th>Title</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade custommodal EventsModal" tabindex="-1" role="dialog" aria-labelledby="EventsModal" data-backdrop="static" data-keyboard="false" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="closeModal();"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h2 class="modal-title">About</h2>
            </div>
            <div class="modal-body">
                <form id="AddPost" action="@Url.Action("AddEdit", "Products")" method="post" onsubmit="return false;">
                    @{Html.RenderPartial("Error");}
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 form-group">
                            <label for="aba">Name Aba</label>
                            <input id="aba" name="aba" type="text" class="form-control" maxlength="50" />
                        </div>
                        <div class="col-xs-12 col-sm-6 form-group">
                            <label for="title">Title</label>
                            <input id="title" name="title" type="text" class="form-control" maxlength="50"/>
                        </div>
                        <div class="col-xs-12 col-sm-6 form-group">
                            <label for="title">Status</label>
                            <select class="form-control" id="status">
                                <option value ="1">Enabled</option>
                                <option value ="0">Disabled</option>
                            </select>
                        </div>
                       
                        <div class="col-xs-12 col-sm-12 form-group">
                            <label for="text">Description</label>
                            <div id="summernote"></div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-lg-2 pull-right">
                            <button type="button" class="btn btn-success form-control" id="Draft"><i class="fa fa-star"></i> SAVE</button>
                        </div>
                        <input type="hidden" id="id_About" />
                    </div><!-- /.row -->
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/About/Index.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#menu-dashboard").removeClass("active");
            $("#menu-about").addClass("open");
        });
    </script>
}
