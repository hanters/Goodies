@{
    ViewBag.Title = "Locations";
}

<div class="row">
    <div class="col-lg-12">
        <h1>Locations <small></small></h1>
        <ol class="breadcrumb">
            <li class="active"><i class="fa fa-map-marker"></i> Locations</li>
        </ol>
    </div>
</div><!-- /.row -->
<div class="row">
    <div class="col-md-12 border-bottom">
        <form id="AddLocation" action="@Url.Action("CadastraBanner", "Launcher")" method="post">
             @{Html.RenderPartial("Error");}
            <div class="row form-group">
                <div class="col-sm-12">
                    <h2 class="green CENTER">Add New Location</h2>
                </div>
                <div class="col-sm-2">
                    <label for="title">Name</label>
                    <input type="text" id="name" class="form-control" placeholder="..." maxlength="50" />
                          </div>
